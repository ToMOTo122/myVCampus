<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="com.vcampus.client.controller.admin.BorrowManagementController"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="25"
      stylesheets="@../../css/library-admin.css"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- 标题区域包含紧凑的统计卡片 -->
    <HBox alignment="CENTER_LEFT" spacing="30" styleClass="page-header"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

        <!-- 标题和统计卡片 -->
        <HBox alignment="CENTER_LEFT" spacing="40" HBox.hgrow="ALWAYS">
            <Label text="📋 借阅记录管理" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: black;"/>

            <!-- 紧凑的统计卡片 -->
            <HBox spacing="15">
                <!-- 当前借阅 -->
                <HBox alignment="CENTER_LEFT" spacing="8"
                      style="-fx-background-color: #e3f2fd; -fx-background-radius: 8; -fx-padding: 10 14; -fx-min-width: 95;">
                    <Label text="🔄" style="-fx-font-size: 16px;"/>
                    <VBox spacing="1">
                        <Label fx:id="activeBorrowsLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: black;"/>
                        <Label text="当前借阅" style="-fx-font-size: 10px; -fx-text-fill: black; -fx-font-weight: 600;"/>
                    </VBox>
                </HBox>

                <!-- 已归还 -->
                <HBox alignment="CENTER_LEFT" spacing="8"
                      style="-fx-background-color: #e8f5e9; -fx-background-radius: 8; -fx-padding: 10 14; -fx-min-width: 95;">
                    <Label text="✅" style="-fx-font-size: 16px;"/>
                    <VBox spacing="1">
                        <Label fx:id="returnedBooksLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: black;"/>
                        <Label text="已归还" style="-fx-font-size: 10px; -fx-text-fill: black; -fx-font-weight: 600;"/>
                    </VBox>
                </HBox>

                <!-- 逾期未还 -->
                <HBox alignment="CENTER_LEFT" spacing="8"
                      style="-fx-background-color: #ffebee; -fx-background-radius: 8; -fx-padding: 10 14; -fx-min-width: 95;">
                    <Label text="⚠️" style="-fx-font-size: 16px;"/>
                    <VBox spacing="1">
                        <Label fx:id="overdueBooksLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: black;"/>
                        <Label text="逾期未还" style="-fx-font-size: 10px; -fx-text-fill: black; -fx-font-weight: 600;"/>
                    </VBox>
                </HBox>

                <!-- 总记录数 -->
                <HBox alignment="CENTER_LEFT" spacing="8"
                      style="-fx-background-color: #f3e5f5; -fx-background-radius: 8; -fx-padding: 10 14; -fx-min-width: 95;">
                    <Label text="📊" style="-fx-font-size: 16px;"/>
                    <VBox spacing="1">
                        <Label fx:id="totalRecordsLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: black;"/>
                        <Label text="总记录数" style="-fx-font-size: 10px; -fx-text-fill: black; -fx-font-weight: 600;"/>
                    </VBox>
                </HBox>
            </HBox>
        </HBox>

        <!-- 刷新按钮 -->
        <Button text="🔄 刷新记录" fx:id="refreshButton"
                style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 24;"/>
    </HBox>

    <!-- 筛选和搜索区域 -->
    <HBox spacing="20" alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
        <Label text="🔍 筛选条件" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: black;"/>

        <TextField fx:id="userSearchField" promptText="用户ID..."
                   style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 6 12; -fx-font-size: 13px;"/>
        <TextField fx:id="bookSearchField" promptText="图书ID/书名..."
                   style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 6 12; -fx-font-size: 13px;"/>

        <ComboBox fx:id="statusFilterCombo" promptText="借阅状态"
                  style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-font-size: 13px;"/>

        <Label text="借阅日期:" style="-fx-font-size: 13px; -fx-text-fill: black; -fx-font-weight: 600;"/>
        <DatePicker fx:id="startDatePicker"
                    style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-font-size: 13px;"/>
        <Label text="至" style="-fx-font-size: 13px; -fx-text-fill: black; -fx-font-weight: 600;"/>
        <DatePicker fx:id="endDatePicker"
                    style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-font-size: 13px;"/>

        <Button text="应用筛选" fx:id="applyFilterButton"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 6 12;"/>
        <Button text="重置" fx:id="resetFilterButton"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 6 12;"/>
    </HBox>

    <!-- 表格区域 - 扩大高度 -->
    <VBox VBox.vgrow="ALWAYS" spacing="15"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2); -fx-min-height: 500;">

        <Label text="📋 借阅记录列表" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: black;"/>

        <!-- 表格容器 - 设置更大的高度 -->
        <TableView fx:id="borrowRecordsTable" VBox.vgrow="ALWAYS"
                   style="-fx-background-color: transparent; -fx-min-height: 400; -fx-pref-height: 600;">
            <columns>
                <TableColumn fx:id="recordIdCol" text="记录ID" prefWidth="80"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="userIdCol" text="用户ID" prefWidth="120"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="bookIdCol" text="图书ID" prefWidth="120"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="bookTitleCol" text="图书名称" prefWidth="200"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="borrowDateCol" text="借阅日期" prefWidth="120"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="dueDateCol" text="应还日期" prefWidth="120"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="returnDateCol" text="实际归还" prefWidth="120"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="statusCol" text="状态" prefWidth="100"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="fineCol" text="罚金" prefWidth="80"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableColumn fx:id="actionCol" text="操作" prefWidth="150"
                             style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <!-- 分页控制 -->
        <HBox spacing="15" alignment="CENTER"
              style="-fx-background-color: #f8f9fa; -fx-background-radius: 6; -fx-padding: 10;">
            <Button text="‹‹" fx:id="firstPageButton"
                    style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 5 10; -fx-font-weight: bold; -fx-text-fill: black;"/>
            <Button text="‹" fx:id="prevPageButton"
                    style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 5 10; -fx-font-weight: bold; -fx-text-fill: black;"/>
            <Label fx:id="pageInfoLabel" text="第 1 页，共 1 页"
                   style="-fx-font-size: 13px; -fx-text-fill: black; -fx-font-weight: 600;"/>
            <Button text="›" fx:id="nextPageButton"
                    style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 5 10; -fx-font-weight: bold; -fx-text-fill: black;"/>
            <Button text="››" fx:id="lastPageButton"
                    style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-padding: 5 10; -fx-font-weight: bold; -fx-text-fill: black;"/>
            <ComboBox fx:id="pageSizeCombo" value="20"
                      style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4; -fx-font-size: 13px;"/>
        </HBox>
    </VBox>
</VBox>